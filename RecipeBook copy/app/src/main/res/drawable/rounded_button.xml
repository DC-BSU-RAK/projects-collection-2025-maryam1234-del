<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Button background color (cheddar orange tone) -->
    <solid android:color="#FFB347" />

    <!-- Rounded corners -->
    <corners android:radius="24dp" />

    <!-- Padding inside the shape (optional, usually handled by Button padding) -->
    <padding
        android:left="16dp"
        android:top="12dp"
        android:right="16dp"
        android:bottom="12dp" />
</shape>
