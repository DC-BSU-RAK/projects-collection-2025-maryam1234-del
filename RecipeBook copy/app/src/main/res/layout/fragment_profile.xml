<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/choco"
    android:padding="24dp">

    <!-- Background Image -->
    <ImageView
        android:id="@+id/bgImageView"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:contentDescription="Profile Background"
        android:scaleType="centerCrop"
        android:src="@drawable/coke_doll" />

    <!-- Scrollable content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="180dp">

            <ImageView
                android:id="@+id/profileImageView"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginBottom="16dp"
                android:contentDescription="Profile Image"
                android:src="@drawable/ic_profile" />

            <EditText
                android:id="@+id/etUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@android:color/darker_gray"
                android:hint="Enter your name"
                android:padding="8dp"
                android:textColor="@android:color/white" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@android:color/darker_gray"
                android:hint="Enter your email"
                android:padding="8dp"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/tvSuccessMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Saved!"
                android:textColor="@android:color/holo_green_light"
                android:textSize="18sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:backgroundTint="#9E4527"
                android:fontFamily="@font/charis_sil"
                android:text="Save"
                android:textStyle="bold|italic" />

            <Button
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#85381F"
                android:fontFamily="@font/charis_sil"
                android:text="Logout"
                android:textStyle="bold|italic" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>
